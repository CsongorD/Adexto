<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Normalize multiple slashes to a single slash
  RewriteCond %{REQUEST_URI} ^(.*)//+(.*)$
  RewriteRule ^ %1/%2 [R=301,L]

  # Remove trailing slash from URLs (except for directories)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)/$ /$1 [R=301,L]

  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Serve existing files directly
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Serve existing directories directly
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Rewrite extensionless URLs to corresponding .html files
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^([^/]+)$ $1.html [L]

  # Redirect all other requests to 404.html
  RewriteRule ^.*$ /404.html [L,R=404]

  # Specify custom 404 error page
  ErrorDocument 404 /404.html
</IfModule>